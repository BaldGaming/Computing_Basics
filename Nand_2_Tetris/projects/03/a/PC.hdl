CHIP PC
{
    IN in[16],inc, load, reset;
    OUT out[16];

    PARTS:
    Inc16 (in=r-out, out=inc-out1);

    Mux16 (a=r-out, b=inc-out1, sel=inc, out=inc-out);
    Mux16 (a=inc-out, b=in, sel=load, out=load-out);
    Mux16 (a=load-out, b=false, sel=reset, out=reset-out);

    Register (in=reset-out, load=true, out=r-out, out=out);
}